# All Day Every Day Records API - Environment Configuration
# Copy this file to .env and configure for your environment

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_NAME="All Day Every Day Records"
APP_URL=http://localhost:5173
APP_VERSION=1.0.0

# API Configuration
API_BASE_URL=http://localhost:8000/api
API_VERSION=v1
API_RATE_LIMIT_ENABLED=true
API_RATE_LIMIT_REQUESTS=1000
API_RATE_LIMIT_WINDOW=3600

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=86400

# Database Configuration - Development
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=alldayeveryday_records_dev
DATABASE_USERNAME=root
DATABASE_PASSWORD=
DATABASE_CHARSET=utf8mb4

# Database Connection Settings
DATABASE_PERSISTENT=true
DATABASE_TIMEOUT=10
DATABASE_QUERY_TIMEOUT=30
DATABASE_MAX_RETRIES=3
DATABASE_RETRY_DELAY=1

# Database Logging
DATABASE_LOG_QUERIES=true
DATABASE_LOG_SLOW_QUERIES=true
DATABASE_SLOW_QUERY_THRESHOLD=2.0

# Database SSL (Production)
# DATABASE_SSL_CA=/path/to/ca-cert.pem
# DATABASE_SSL_CERT=/path/to/client-cert.pem
# DATABASE_SSL_KEY=/path/to/client-key.pem
# DATABASE_SSL_VERIFY=true

# Migration Configuration
DATABASE_MIGRATIONS_TABLE=migrations
DATABASE_MIGRATIONS_PATH=../database/migrations

# Backup Configuration
DATABASE_BACKUP_PATH=../database/backups
DATABASE_BACKUP_RETENTION_DAYS=30

# Security Settings
SECURITY_TOKEN_SECRET=your-super-secret-jwt-key-change-this-in-production
SECURITY_TOKEN_EXPIRY=3600
SECURITY_PASSWORD_MIN_LENGTH=8
SECURITY_PASSWORD_REQUIRE_SPECIAL=true

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=../public/uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=../logs/api.log
LOG_MAX_FILES=30

# Cache Settings (for future use)
CACHE_ENABLED=false
CACHE_DRIVER=file
CACHE_TTL=3600

# Email Settings (for future use)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@alldayeverydayrecords.com
MAIL_FROM_NAME="All Day Every Day Records"

# Third-party API Keys
DISCOGS_API_KEY=
DISCOGS_API_SECRET=
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Performance Settings
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=300
MAX_INPUT_VARS=3000