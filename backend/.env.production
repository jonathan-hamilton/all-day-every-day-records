# All Day Every Day Records API - Production Environment with Development CORS

# Application
APP_ENV=production
APP_DEBUG=false
API_BASE_URL=https://alldayeverydayrecords.com/api

# Database (Use production database credentials)
DATABASE_HOST=localhost
DATABASE_NAME=alldayeveryday_records
DATABASE_USERNAME=your_production_db_user
DATABASE_PASSWORD=your_production_db_password

# CORS - INCLUDES LOCALHOST FOR DEVELOPMENT
CORS_ENABLED=true
CORS_ORIGINS=https://alldayeverydayrecords.com,http://localhost:5173,http://127.0.0.1:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# File Uploads
UPLOAD_PATH=../public/uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp

# Security
SECURITY_TOKEN_SECRET=your-production-secret-key-here
SECURITY_PASSWORD_MIN_LENGTH=8