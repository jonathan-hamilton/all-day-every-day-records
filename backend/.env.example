# All Day Every Day Records API - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment: development, testing, staging, production
APP_ENV=development

# Application settings
APP_NAME="All Day Every Day Records API"
APP_VERSION=1.0.0
APP_DEBUG=true
APP_TIMEZONE=America/New_York

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=alldayeveryday_records
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# Development database (optional - only for local development)
# DEV_DB_HOST=localhost
# DEV_DB_USERNAME=root
# DEV_DB_PASSWORD=

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API base URL (used for absolute URLs in responses)
API_BASE_URL=https://alldayeverydayrecords.com/api

# Rate limiting (requests per minute)
API_RATE_LIMIT=100

# API timeout (seconds)
API_TIMEOUT=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT Secret - CHANGE THIS TO A RANDOM STRING IN PRODUCTION!
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Encryption key for sensitive data
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-encryption-key-change-this-in-production

# Session lifetime (seconds) - default 1 hour
SESSION_LIFETIME=3600

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
# Development: Usually localhost ports
# Production: Your actual domain(s)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://alldayeverydayrecords.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: debug, info, warning, error
LOG_LEVEL=error

# Log file path (make sure the directory is writable)
LOG_FILE=/var/log/alldayeveryday/api.log

# Maximum log files to keep (for rotation)
LOG_MAX_FILES=7

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size for uploads (in MB)
UPLOAD_MAX_SIZE=10

# Allowed file types for image uploads
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp

# Upload directory (relative to backend root)
UPLOAD_DIR=../public/images/uploads

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email service configuration (for contact forms, etc.)
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
# MAIL_ENCRYPTION=tls

# Image processing service (if needed)
# IMAGE_PROCESSING_API_KEY=your-api-key

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================

# Enable SQL query logging in development
DEV_LOG_QUERIES=true

# Enable detailed error responses in development
DEV_DETAILED_ERRORS=true

# CORS credentials for development
DEV_CORS_CREDENTIALS=true

# =============================================================================
# PRODUCTION SPECIFIC SETTINGS
# =============================================================================

# Force HTTPS in production
FORCE_HTTPS=true

# Enable HSTS (HTTP Strict Transport Security)
ENABLE_HSTS=true

# Content Security Policy
CSP_ENABLED=true

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================

# Backup directory
BACKUP_DIR=/var/backups/alldayeveryday

# Maintenance mode (set to true to enable maintenance mode)
MAINTENANCE_MODE=false

# Maintenance message
MAINTENANCE_MESSAGE="API is temporarily unavailable for maintenance. Please try again later."